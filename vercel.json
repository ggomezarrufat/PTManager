{
  "version": 2,
  "buildCommand": "cd pt-manager && npm run build",
  "outputDirectory": "pt-manager/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/api-docs",
      "dest": "/api/api-docs"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "pt-backend/src/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./pt-manager-mobile/"
}