{
  "version": 2,
  "buildCommand": "cd pt-manager && npm run build",
  "outputDirectory": "pt-manager/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/pt-backend/src/index.js"
    },
    {
      "src": "/health",
      "dest": "/pt-backend/src/index.js"
    },
    {
      "src": "/api-docs",
      "dest": "/pt-backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}